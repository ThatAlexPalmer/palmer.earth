{
  "extends": ["eslint:recommended", "next/core-web-vitals"],
  "rules": {
    "react/react-in-jsx-scope": "off", // React 17+ JSX runtime
    "react/no-unescaped-entities": "off", // Allow unescaped characters
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }], // Warn for unused vars but ignore those prefixed with _
    "no-undef": "off" // Prevent React undefined issue in _document.tsx
  }
}